<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- res/values/styles.xml -->
    <style name="CustomEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/rounded_edittext_background</item> <!-- Apply the custom background -->
        <item name="android:padding">12dp</item> <!-- Adjust padding as needed -->
        <item name="android:textColorHint">@color/cardview_shadow_start_color</item>
        <!-- Add any other attributes you want to customize -->
    </style>
    <style name="Head_Color">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="alert_descr">
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="action">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#0A7AFF</item>
    </style>
</resources>